            </div>
        </div>

    </div>
</nav>
<!-- Close Header -->

<!-- Modal -->
<div class="modal fade bg-white" id="templatemo_search" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="w-100 pt-1 mb-5 text-right">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="" method="get" class="modal-content modal-body border-0 p-0">
            <div class="input-group mb-2">
                <input type="text" class="form-control" id="inputModalSearch" name="q" placeholder="Search ...">
                <button type="submit" class="input-group-text bg-success text-light">
                    <i class="fa fa-fw fa-search text-white"></i>
                </button>
            </div>
        </form>
    </div>
</div>


<section id="hero" class="d-flex align-items-center justify-content-center">
    <div class="container" data-aos="fade-up">

      <div class="row justify-content-center" data-aos="fade-up" data-aos-delay="150">
        <div class="col-xl-6 col-lg-8">
          <h1>Bored? <span>Go Shopping</span></h1>
          <h2>Sad?<span>Go Shopping</span></h2>
        </div>
      </div>

      <div class="row gy-4 mt-5 justify-content-center" data-aos="zoom-in" data-aos-delay="250">
        <div class="col-xl-2 col-md-4">
          <div class="icon-box">
            <i class="ri-store-line"></i>
            <h3><a href="">T-Shirt</a></h3>
          </div>
        </div>
        <div class="col-xl-2 col-md-4">
          <div class="icon-box">
            <i class="ri-store-line"></i>
            <h3><a href="">Jackets</a></h3>
          </div>
        </div>
        <div class="col-xl-2 col-md-4">
          <div class="icon-box">
            <i class="ri-store-line"></i>
            <h3><a href="">Sleeveless</a></h3>
          </div>
        </div>
        <div class="col-xl-2 col-md-4">
          <div class="icon-box">
            <i class="ri-store-line"></i>
            <h3><a href="">Bags</a></h3>
          </div>
        </div>
        <div class="col-xl-2 col-md-4">
          <div class="icon-box">
            <i class="ri-store-line"></i>
            <h3><a href="">Shoes</a></h3>
          </div>
        </div>
      </div>

    </div>
  </section><!-- End Hero -->


  <!-- Start Featured Product -->
  
<section class="bg-dark">
    <div class="container py-5">
        <div class="row text-center py-3">
            <div class="col-lg-6 m-auto">
                <h1 style="color: azure;">We design none less than your imagination.
3                  <span style="color: blue;">Remembered</span></h1><br>
          
          <h3 style="color: rgb(165, 168, 26);">Rastyles We fulfil your dreams</h3>
            </div>
        </div>


        
        <div class="row">

            <% if(products.length >0){ %>
          <% products.forEach(item=>{  %>
  
            <div class="col-12 col-sm-6 col-md-3 mb-4">
                <div class="card h-100 bg-secondary">
                    <a href="/product/details/<%=item._id %>">
                        <img src="/<%= item.images[0] %>" class="card-img-top" alt="...">
                    </a>
                    <div class="card-body">
                        <ul class="list-unstyled d-flex justify-content-between">
                            <!-- <li>
                                <i class="text-warning fa fa-star"></i>
                                <i class="text-warning fa fa-star"></i>
                                <i class="text-warning fa fa-star"></i>
                                <i class="text-muted fa fa-star"></i>
                                <i class="text-muted fa fa-star"></i>
                            </li> -->
                            <!-- <li class="text-muted text-right">$240.00</li> -->
                        </ul>
                        <a href="/product/details/<%=item._id %>" class="h4 text-decoration-none text-light"><%= item.productname %></a>
                        <p class="card-text">
                            <%= item.description %>
                        </p>
                        <% if (item.offer>0){ %>
                            <p class="dress-card-para mt-1"><span class="dress-card-price fs-5"> ₹ <%= Math.round(item.price -( item.price *(item.offer/100))) %>&ensp;</span><span
                              class="dress-card-crossed mt-1"></span><span class="dress-card-off text-light">&ensp;(<%= item.offer %>% OFF)</span></p>
                         <% } else{ %>
                            <p class="dress-card-para mt-1"><span class="dress-card-price fs-5"> ₹ <%=item.price %>&ensp;</span><span
                              class="dress-card-crossed mt-1"></span></p>
                          <% }%>
                        <p class="text-muted">Reviews (24)</p>
                    </div>
                </div>

            </div>
            <%   }) %>
  <%  }  %>
        </div>
     
    </div>
   
</section>
  



<%- include ('./partials/bottom-navbar') %>
  </body>

</html>